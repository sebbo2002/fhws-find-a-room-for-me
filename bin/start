#!/usr/bin/env bash
set -e

echo "#################################################################################################################"
echo "###                                                ENVIRONMENT                                                ###"
echo "#################################################################################################################"
echo ""
env

echo -e "\n\n#################################################################################################################"
echo "###                                          RUN DATABASE MIGRATIONS                                          ###"
echo "#################################################################################################################"
echo ""
database up | bunyan -o short -l debug

echo -e "\n\n#################################################################################################################"
echo "###                                        RUN INITIAL INFOBOARD SYNC                                         ###"
echo "#################################################################################################################"
echo ""
infoboard-sync | bunyan -o short -l debug


echo -e "\n\n#################################################################################################################"
echo "###                                                START SERVER                                               ###"
echo "#################################################################################################################"
echo ""
node ./server.js | bunyan -o short -l debug