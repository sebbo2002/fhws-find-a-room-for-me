#!/usr/bin/env bash
set -e

echo "#################################################################################################################"
echo "###                                                ENVIRONMENT                                                ###"
echo "#################################################################################################################"
echo ""
env

echo -e "\n\n#################################################################################################################"
echo "###                                          RUN DATABASE MIGRATIONS                                          ###"
echo "#################################################################################################################"
echo ""
database up

echo -e "\n\n#################################################################################################################"
echo "###                                                START SERVER                                               ###"
echo "#################################################################################################################"
echo ""
node ./server.js